
@model IEnumerable<Shop2.Web.Models.PageViewModel>
@using Microsoft.AspNet.Identity;
<div class="header">
    <div class="top-header">
        <div class="container">
            <div class="top-header-left">
                <ul class="support">
                    <li><a href="gioi-thieu.html"><label> </label></a></li>
                    <li><a href="gioi-thieu">Giới Thiệu</a></li>
                </ul>
                <ul class="support">
                    <li><a href="lien-he.html"><label> </label></a></li>
                    <li><a href="lien-he.html">Liên Hệ<span class="live"> chúng tôi</span></a></li>
                </ul>
                <ul class="support">
                    <li class="van"><a href="#"><label> </label></a></li>
                    <li><a href="#">Free shipping <span class="live">on order over 500</span></a></li>
                </ul>

                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <div class="down-top">
                    <select class="in-drop">
                        <option value="English" class="in-of">English</option>
                        <option value="Japanese" class="in-of">Japanese</option>
                        <option value="French" class="in-of">French</option>
                        <option value="German" class="in-of">German</option>
                    </select>
                </div>
                <div class="down-top top-down">
                    <select class="in-drop">
                        @foreach (var page in Model.Where(x => x.Status == true))
                        {

                            <option value="@page.Name" class="in-of">@page.Name</option>


                        }


                    </select>
                </div>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="trang-chu.html"><img src="~/Assets/client/images/logo.png" alt=" " /></a>
                </div>

                <div class="search">
                    <form method="get" action="/tim-kiem.html">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Từ khóa">
                        <input type="submit" value="Tìm kiếm" id="btnSearch">
                    </form>
                </div>

                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                @using (Html.BeginForm("Logout", "Account", FormMethod.Post))
                {
                    if (Request.IsAuthenticated) // nếu login thành công bằng cơ chế identity
                    {

                        @Html.AntiForgeryToken() @*chống submit liên tục lên server*@
                        <ul class="login">
                            <li><a href="tai-khoan.html"><span> </span>Xin chào : @User.Identity.Name</a></li> |
                            <li><button type="submit">Thoát</button></li>
                        </ul>
                    }
                    else
                    {
                        <ul class="login">
                            <li><a href="dang-nhap.html"><span> </span>Đăng Nhập</a></li> |
                            <li><a href="dang-ky.html">Đăng Ký</a></li>
                        </ul>
                    }

                }

                <div class="cart"><a href="gio-hang.html"><span> </span>Giỏ Hàng</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
