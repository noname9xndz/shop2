
@model Shop2.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập noname shop";
    Layout = "~/Views/Shared/Layouts.cshtml";
    ViewBag.MetaKeyword = "Đăng nhập noname shop";
    ViewBag.MetaDescription = "Đăng nhập noname shop";
}

<div class="account_grid">
    <div class=" login-right">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account",new {returnUrl = @ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div>
                <span>Tài Khảon<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
            </div>

            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password)
            </div>

            <div>
                @Html.CheckBoxFor(model => model.RememberMe) Nhớ Tài Khoản
            </div>

            <a class="forgot" href="#">Forgot Your Password?</a>
            <input type="submit" value="Đăng Nhập">
        }

    </div>
    <div class=" login-left">
        <h3>Chưa có tài khoản</h3>
        <p>Nếu bạn chưa có tài khoản vui lòng đăng ký</p>
        <a class="acount-btn" href="dang-ky.html">Tạo tài khoản</a>
    </div>
    <div class="clearfix"> </div>
</div>

